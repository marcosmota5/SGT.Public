                    VerticalAlignment="Top"
                    Foreground="{DynamicResource MahApps.Brushes.IdealForeground}"
                    Text="{Binding ElementName=txbFilters, Path=Text}"
                    Visibility="{c:Binding !FilterVisible,
                                           Mode=OneWay,
                                           UpdateSourceTrigger=PropertyChanged}">
                    <TextBlock.LayoutTransform>
                        <TransformGroup>
                            <RotateTransform Angle="-90" />
                        </TransformGroup>
                    </TextBlock.LayoutTransform>
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="MouseLeftButtonDown">
                            <i:InvokeCommandAction Command="{Binding ComandoAlterarTamanhoFiltro}" />
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                </TextBlock>
            </Grid>

            <GroupBox
                x:Name="grpResultados"
                Grid.Column="1"
                Margin="2"
                Header="Resultados">
                <AdornerDecorator>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition Height="40" />
                        </Grid.RowDefinitions>
                        <syncfusion:SfDataGrid
                            x:Name="GridPesquisa"
                            Grid.Row="0"
                            AllowDrop="False"
                            ItemsSource="{Binding ListaResultadosPesquisaOrdemServico, Mode=OneWay, UpdateSourceTrigger=PropertyChanged, IsAsync=True}"
                            SelectedItem="{Binding ResultadoPesquisaOrdemServicoSelecionado, Mode=OneWayToSource, UpdateSourceTrigger=PropertyChanged}"
                            ToolTip="Clique duas vezes para abrir o registro ou clique com o botão direito para ver as opções">
                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="MouseDoubleClick">
                                    <i:InvokeCommandAction Command="{Binding ComandoAbrirProposta}" />
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                            <syncfusion:SfDataGrid.Resources>
                                <proxies:BindingProxy x:Key="proxy" Data="{Binding}" />
                            </syncfusion:SfDataGrid.Resources>
                            <syncfusion:SfDataGrid.RecordContextMenu>
                                <ContextMenu>
                                    <MenuItem
                                        x:Name="mniAbrirProposta"
                                        Command="{Binding Path=Data.ComandoAbrirProposta, Source={StaticResource proxy}}"
                                        Header="Abrir">
                                        <MenuItem.Icon>
                                            <iconPacks:PackIconMaterial
                                                Margin="2"
                                                VerticalAlignment="Center"
                                                Foreground="{DynamicResource MahApps.Brushes.Accent}"
                                                Kind="OpenInNew" />
                                        </MenuItem.Icon>
                                    </MenuItem>
                                    <MenuItem x:Name="mniVisualizarProposta" Header="Visualizar">
                                        <MenuItem.Icon>
                                            <iconPacks:PackIconMaterial
                                                Margin="2"
                                                VerticalAlignment="Center"
                                                Foreground="{DynamicResource MahApps.Brushes.Accent}"
                                                Kind="FilePdfBox" />
                                        </MenuItem.Icon>
                                        <MenuItem
                                            x:Name="mniVisualizarOSAtual"
                                            Command="{Binding Data.ComandoVisualizarOrdemServicoAtual, Source={StaticResource proxy}}"
                                            Header="OS atual" />
                                        <MenuItem
                                            x:Name="mniVisualizarOSPrimaria"
                                            Command="{Binding Data.ComandoVisualizarOrdemServicoPrimaria, Source={StaticResource proxy}}"
                                            Header="OS primária" />
                                    </MenuItem>
                                </ContextMenu>
                            </syncfusion:SfDataGrid.RecordContextMenu>
                            <syncfusion:SfDataGrid.Columns>
                                <syncfusion:GridDateTimeColumn
                                    CustomPattern="dd/MM/yyyy HH:mm"
                                    HeaderText="Data da inserção"
                                    MappingName="DataInsercao"
                                    Pattern="CustomPattern" />
                                <syncfusion:GridTextColumn HeaderText="Usuário" MappingName="NomeUsuario" />
                                <syncfusion:GridTextColumn HeaderText="Tipo" MappingName="NomeTipoOS" />
                                <syncfusion:GridTextColumn HeaderText="Cliente" MappingName="NomeCliente" />
                                <syncfusion:GridNumericColumn
                                    HeaderText="Ordem de serviço atual"
                                    MappingName="NumeroOrdemServicoAtual"
                                    NumberDecimalDigits="0" />
                                <syncfusion:GridNumericColumn
                                    HeaderText="Ordem de serviço primária"
                                    MappingName="NumeroOrdemServicoPrimaria"
                                    NumberDecimalDigits="0" />
                                <syncfusion:GridTextColumn HeaderText="Tipo da manutenção" MappingName="NomeTipoManutencao" />
                                <syncfusion:GridNumericColumn
                                    HeaderText="Número do chamado"
                                    MappingName="NumeroChamado"
                                    NumberDecimalDigits="0" />
                                <syncfusion:GridDateTimeColumn
                                    CustomPattern="dd/MM/yyyy HH:mm"
                                    HeaderText="Data do chamado"
                                    MappingName="DataChamado"
                                    Pattern="CustomPattern" />
                                <syncfusion:GridDateTimeColumn
                                    CustomPattern="dd/MM/yyyy HH:mm"
                                    HeaderText="Data do atendimento"
                                    MappingName="DataAtendimento"
                                    Pattern="CustomPattern" />
                                <syncfusion:GridTextColumn HeaderText="Mastro" MappingName="Mastro" />
                                <syncfusion:GridTextColumn HeaderText="Código da falha" MappingName="CodigoFalha" />
                                <syncfusion:GridNumericColumn
                                    HeaderText="Etapas concluídas"
                                    MappingName="EtapasConcluidas"
                                    NumberDecimalDigits="0" />
                                <syncfusion:GridNumericColumn
                                    HeaderText="Horímetro"
                                    MappingName="Horimetro"
                                    NumberGroupSeparator="3" />
                                <syncfusion:GridDateTimeColumn
                                    CustomPattern="dd/MM/yyyy HH:mm"
                                    HeaderText="Data da saída"
                                    MappingName="DataSaida"
                                    Pattern="CustomPattern" />
                                <syncfusion:GridDateTimeColumn
                                    CustomPattern="dd/MM/yyyy HH:mm"
                                    HeaderText="Data da chegada"
                                    MappingName="DataChegada"
                                    Pattern="CustomPattern" />
                                <syncfusion:GridDateTimeColumn
                                    CustomPattern="dd/MM/yyyy HH:mm"
                                    HeaderText="Data do retorno"
                                    MappingName="DataRetorno"
                                    Pattern="CustomPattern" />
                                <syncfusion:GridTextColumn HeaderText="Equipamento após manutenção" MappingName="NomeEquipamentoAposManutencao" />
                                <syncfusion:GridCheckBoxColumn HeaderText="Equipamento operacional" MappingName="EquipamentoOperacional" />
                                <syncfusion:GridTextColumn HeaderText="Executante do serviço" MappingName="NomeExecutanteServico" />
                                <syncfusion:GridTextColumn HeaderText="Série do equipamento" MappingName="NomeSerie" />
                                <syncfusion:GridTextColumn HeaderText="Fabricante" MappingName="NomeFabricante" />
                                <syncfusion:GridTextColumn HeaderText="Tipo do equipamento" MappingName="NomeTipoEquipamento" />
                                <syncfusion:GridTextColumn HeaderText="Modelo" MappingName="NomeModelo" />
                                <syncfusion:GridNumericColumn
                                    HeaderText="Quantidade de itens"
                                    MappingName="QuantidadeItens"
                                    NumberDecimalDigits="0" />
                                <syncfusion:GridNumericColumn
                                    HeaderText="Quantidade de eventos"
                                    MappingName="QuantidadeEventos"
                                    NumberDecimalDigits="0" />
                                <syncfusion:GridTextColumn HeaderText="Tempo para resposta" MappingName="TempoResposta" />
                                <syncfusion:GridTextColumn HeaderText="Tempo para atendimento" MappingName="TempoAtendimento" />
                            </syncfusion:SfDataGrid.Columns>
                        </syncfusion:SfDataGrid>
                        <Grid Grid.Row="1">
                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition Width="125" />
                            </Grid.ColumnDefinitions>
                            <TextBlock
                                Grid.Row="0"
                                d:Text="Resultados encontrados: "
                                FontWeight="Bold"
                                Text="{Binding TextoResultadosEncontrados, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                            <TextBlock
                                Grid.Row="1"
                                d:Text="*Limitado a x resultado (s)"
                                Text="{Binding TextoLimiteDeResultados, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                            <Button
                                x:Name="btnExportar"
                                Grid.Row="0"
                                Grid.RowSpan="2"
                                Grid.Column="1"
                                Margin="2"
                                VerticalAlignment="Center"
                                Command="{Binding ComandoExportarPesquisa}"
                                IsEnabled="{Binding ListaResultadosPesquisaOrdemServico.Count, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="24" />
                                        <ColumnDefinition />
                                    </Grid.ColumnDefinitions>

                                    <iconPacks:PackIconMaterial
                                        Grid.Column="0"
                                        VerticalAlignment="Center"
                                        Foreground="{DynamicResource MahApps.Brushes.Accent}"
                                        Kind="DatabaseExport" />
                                    <TextBlock Grid.Column="1">Exportar</TextBlock>
                                </Grid>
                            </Button>
                        </Grid>
                    </Grid>
                </AdornerDecorator>
            </GroupBox>
        </Grid>
        <!--  Barra de status contendo uma barra de progresso e um texto  -->
        <StackPanel
            x:Name="grdBarraDeStatus"
            Grid.Row="2"
            Background="LightGray"
            Orientation="Vertical">
            <mah:MetroProgressBar
                x:Name="pgbProgresso"
                IsIndeterminate="{Binding ProgressoEhIndeterminavel, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"
                Maximum="100"
                Minimum="0"
                Visibility="Visible"
                Value="{Binding ValorProgresso}" />
            <StatusBar Name="stbStatus" Background="{DynamicResource MahApps.Brushes.Gray.SemiTransparent}">
                <TextBlock
                    x:Name="tblStatus"
                    Foreground="Black"
                    Text="{Binding MensagemStatus, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" />
            </StatusBar>
        </StackPanel>
    </Grid>
</UserControl>
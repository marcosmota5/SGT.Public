<UserControl
    x:Class="SGT.Views.PesquisarOrdemServicoView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:behaviors="clr-namespace:SGT.Behaviors"
    xmlns:c="clr-namespace:CalcBinding;assembly=CalcBinding"
    xmlns:converters="clr-namespace:SGT.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
    xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:proxies="clr-namespace:SGT.Proxies"
    xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
    xmlns:viewmodels="clr-namespace:SGT.ViewModels"
    xmlns:views="clr-namespace:SGT.Views"
    d:DesignHeight="720"
    d:DesignWidth="1280"
    mah:DialogParticipation.Register="{Binding}"
    Background="{DynamicResource MahApps.Brushes.ThemeBackground}"
    Loaded="UserControl_Loaded"
    mc:Ignorable="d">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis" />
        <converters:BooleanAndConverter x:Key="booleanAndConverter" />
        <converters:InverseBooleanConverter x:Key="inverseBooleanConverter" />
    </UserControl.Resources>
    <Grid Margin="2">
        <Grid.RowDefinitions>
            <RowDefinition Height="{Binding ElementName=grpOpcoes, Path=Height}" d:Height="140" />
            <RowDefinition />
            <RowDefinition Height="28" />
        </Grid.RowDefinitions>
        <Expander
            x:Name="grpOpcoes"
            Grid.Row="0"
            Grid.Column="0"
            Margin="2"
            FlowDirection="RightToLeft"
            IsExpanded="True">
            <Expander.Header>
                <Grid FlowDirection="LeftToRight">
                    <TextBlock
                        HorizontalAlignment="Left"
                        FontSize="12"
                        Foreground="White"
                        Text="OPÇÕES" />
                </Grid>
            </Expander.Header>
            <Grid FlowDirection="LeftToRight">
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="165" />
                        <ColumnDefinition Width="250" />
                        <ColumnDefinition Width="2*" />
                        <ColumnDefinition Width="100" />
                        <ColumnDefinition Width="125" />
                        <ColumnDefinition Width="125" />
                    </Grid.ColumnDefinitions>
                    <mah:ToggleSwitch
                        x:Name="tgsModoAvancado"
                        MinWidth="0"
                        Content="Modo avançado"
                        IsOn="{c:Binding '!PesquisaBasica',
                                         Mode=TwoWay,
                                         UpdateSourceTrigger=PropertyChanged}"
                        ToolTip="Marque aqui para efetuar uma pesquisa com diversos parâmetros" />
                    <TextBox
                        x:Name="txtPesquisa"
                        Grid.Column="1"
                        Grid.ColumnSpan="4"
                        Margin="2"
                        VerticalAlignment="Center"
                        d:Visibility="Visible"
                        mah:TextBoxHelper.ClearTextButton="{Binding RelativeSource={RelativeSource Self}, Path=(mah:TextBoxHelper.HasText), Mode=OneWay}"
                        mah:TextBoxHelper.UseFloatingWatermark="True"
                        mah:TextBoxHelper.Watermark="Texto a ser pesquisado"
                        mah:TextBoxHelper.WatermarkAlignment="Right"
                        Text="{Binding TextoPesquisado, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                        ToolTip="Campos pesquisados: Ordem de serviço atual, ordem de serviço primária, número do chamado, cliente, executante do serviço, filial, fabricante, tipo do equipamento, modelo e série"
                        Visibility="{c:Binding 'PesquisaBasica',
                                               Mode=TwoWay,
                                               UpdateSourceTrigger=PropertyChanged}">
                        <TextBox.InputBindings>
                            <KeyBinding Key="Enter" Command="{Binding Path=ComandoPesquisar}" />
                        </TextBox.InputBindings>
                    </TextBox>
                    <ComboBox
                        x:Name="cboParametro"
                        Grid.Row="0"
                        Grid.Column="1"
                        Margin="2"
                        VerticalAlignment="Center"
                        mah:TextBoxHelper.IsWaitingForData="True"
                        mah:TextBoxHelper.UseFloatingWatermark="True"
                        mah:TextBoxHelper.Watermark="Parâmetro"
                        ItemsSource="{Binding ListaParametros, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                        SelectedItem="{Binding ParametroSelecionado, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                        Visibility="{c:Binding '!PesquisaBasica',
                                               Mode=TwoWay,
                                               UpdateSourceTrigger=PropertyChanged}">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="25" />
                                        <ColumnDefinition />
                                    </Grid.ColumnDefinitions>
                                    <iconPacks:PackIconMaterial
                                        Grid.Column="0"
                                        VerticalAlignment="Center"
                                        Foreground="{DynamicResource MahApps.Brushes.Accent}"
                                        Kind="{Binding Icone}" />
                                    <TextBlock Grid.Column="1" Text="{Binding Nome}" />
                                </Grid>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                    <Grid
                        x:Name="grdPesquisaData"
                        Grid.Column="2"
                        d:Visibility="Collapsed"
                        Visibility="{c:Binding 'PesquisaDataVisivel and !PesquisaBasica',
                                               Mode=TwoWay,
                                               UpdateSourceTrigger=PropertyChanged}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <DatePicker
                            x:Name="datDe"
                            Grid.Row="0"
                            Grid.Column="0"
                            Margin="2"
                            VerticalAlignment="Center"
                            mah:TextBoxHelper.ClearTextButton="{Binding RelativeSource={RelativeSource Self}, Path=(mah:TextBoxHelper.HasText), Mode=OneWay}"
                            mah:TextBoxHelper.UseFloatingWatermark="True"
                            mah:TextBoxHelper.Watermark="De"
                            DisplayDateEnd="{Binding DataAte, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                            IsTodayHighlighted="True"
                            SelectedDate="{Binding DataDe, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                            SelectedDateFormat="Short">
                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="LostFocus">
                                    <i:InvokeCommandAction Command="{Binding ComandoVerificaDataDe}" />
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                        </DatePicker>
                        <DatePicker
                            x:Name="datAte"
                            Grid.Row="0"
                            Grid.Column="1"
                            Margin="2"
                            VerticalAlignment="Center"
                            mah:TextBoxHelper.ClearTextButton="{Binding RelativeSource={RelativeSource Self}, Path=(mah:TextBoxHelper.HasText), Mode=OneWay}"
                            mah:TextBoxHelper.UseFloatingWatermark="True"
                            mah:TextBoxHelper.Watermark="Até"
                            DisplayDateStart="{Binding DataDe, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                            IsTodayHighlighted="True"
                            SelectedDate="{Binding DataAte, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                            SelectedDateFormat="Short">
                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="LostFocus">
                                    <i:InvokeCommandAction Command="{Binding ComandoVerificaDataAte}" />
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                        </DatePicker>
                    </Grid>
                    <Grid
                        x:Name="grdTexto"
                        Grid.Column="2"
                        d:Visibility="Collapsed"
                        Visibility="{c:Binding 'PesquisaTextoVisivel and !PesquisaBasica',
                                               Mode=TwoWay,
                                               UpdateSourceTrigger=PropertyChanged}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="130" />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <ComboBox
                            x:Name="cboOpcaoPesquisa"
                            Grid.Row="0"
                            Grid.Column="0"
                            Margin="2"
                            VerticalAlignment="Center"
                            mah:TextBoxHelper.IsWaitingForData="True"
                            mah:TextBoxHelper.UseFloatingWatermark="True"
                            mah:TextBoxHelper.Watermark="Opção de busca"
                            ItemsSource="{Binding ListaOpcaoPesquisa, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                            SelectedItem="{Binding OpcaoPesquisaSelecionada, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="25" />
                                            <ColumnDefinition />
                                        </Grid.ColumnDefinitions>
                                        <iconPacks:PackIconMaterial
                                            Grid.Column="0"
                                            VerticalAlignment="Center"
                                            Foreground="{Binding Cor}"
                                            Kind="{Binding Icone}" />
                                        <TextBlock Grid.Column="1" Text="{Binding Nome}" />
                                    </Grid>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                        <ComboBox
                            x:Name="cboTextoPesquisa"
                            Grid.Column="1"
                            Margin="2"
                            VerticalAlignment="Center"
                            mah:TextBoxHelper.ClearTextButton="{Binding RelativeSource={RelativeSource Self}, Path=Text.Length, Mode=OneWay}"
                            mah:TextBoxHelper.IsWaitingForData="True"
                            mah:TextBoxHelper.UseFloatingWatermark="True"
                            mah:TextBoxHelper.Watermark="Texto a ser buscado"
                            DisplayMemberPath="TextoRetornado"
                            IsEditable="True"
                            ItemsSource="{Binding ListaTextoPesquisa, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                            MaxDropDownHeight="125"
                            Style="{DynamicResource MahApps.Styles.ComboBox.Virtualized}"
                            Text="{Binding TextoPesquisa, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                    </Grid>
                    <Grid
                        x:Name="grdPesquisaDecimal"
                        Grid.Column="4"
                        d:Visibility="Collapsed"
                        Visibility="{c:Binding 'PesquisaDecimalVisivel and !PesquisaBasica',
                                               Mode=TwoWay,
                                               UpdateSourceTrigger=PropertyChanged}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <mah:NumericUpDown
                            x:Name="nudDecimalDe"
                            Grid.Column="0"
                            Margin="2"
                            VerticalAlignment="Center"
                            HorizontalContentAlignment="Stretch"
                            mah:TextBoxHelper.ClearTextButton="{Binding RelativeSource={RelativeSource Self}, Path=(mah:TextBoxHelper.HasText), Mode=OneWay}"
                            mah:TextBoxHelper.UseFloatingWatermark="True"
                            mah:TextBoxHelper.Watermark="De"
                            mah:TextBoxHelper.WatermarkAlignment="Left"
                            Culture="pt-BR"
                            DecimalPointCorrection="Currency"
                            HideUpDownButtons="True"
                            InterceptArrowKeys="False"
                            InterceptManualEnter="True"
                            InterceptMouseWheel="False"
                            Maximum="{Binding DecimalAte, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                            NumericInputMode="Decimal"
                            StringFormat="{Binding ParametroSelecionado.Formato, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                            SwitchUpDownButtons="False"
                            Value="{Binding DecimalDe, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                        <mah:NumericUpDown
                            x:Name="nudDecimalAte"
                            Grid.Column="1"
                            Margin="2"
                            VerticalAlignment="Center"
                            HorizontalContentAlignment="Stretch"
                            mah:TextBoxHelper.ClearTextButton="{Binding RelativeSource={RelativeSource Self}, Path=(mah:TextBoxHelper.HasText), Mode=OneWay}"
                            mah:TextBoxHelper.UseFloatingWatermark="True"
                            mah:TextBoxHelper.Watermark="Até"
                            mah:TextBoxHelper.WatermarkAlignment="Left"
                            Culture="pt-BR"
                            DecimalPointCorrection="Currency"
                            HideUpDownButtons="True"
                            InterceptArrowKeys="False"
                            InterceptManualEnter="True"
                            InterceptMouseWheel="False"
                            Minimum="{Binding DecimalDe, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                            NumericInputMode="Decimal"
                            StringFormat="{Binding ParametroSelecionado.Formato, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                            SwitchUpDownButtons="False"
                            Value="{Binding DecimalAte, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                    </Grid>
                    <Grid
                        x:Name="grdPesquisaInteger"
                        Grid.Column="2"
                        d:Visibility="Collapsed"
                        Visibility="{c:Binding 'PesquisaIntegerVisivel and !PesquisaBasica',
                                               Mode=TwoWay,
                                               UpdateSourceTrigger=PropertyChanged}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <mah:NumericUpDown
                            x:Name="nudIntegerDe"
                            Grid.Column="0"
                            Margin="2"
                            VerticalAlignment="Center"
                            HorizontalContentAlignment="Stretch"
                            mah:TextBoxHelper.ClearTextButton="{Binding RelativeSource={RelativeSource Self}, Path=(mah:TextBoxHelper.HasText), Mode=OneWay}"
                            mah:TextBoxHelper.UseFloatingWatermark="True"
                            mah:TextBoxHelper.Watermark="De"
                            mah:TextBoxHelper.WatermarkAlignment="Left"
                            Culture="pt-BR"
                            DecimalPointCorrection="Currency"
                            HideUpDownButtons="True"
                            InterceptArrowKeys="False"
                            InterceptManualEnter="True"
                            InterceptMouseWheel="False"
                            Maximum="{Binding IntegerAte, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                            NumericInputMode="Decimal"
                            StringFormat="{Binding ParametroSelecionado.Formato, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                            SwitchUpDownButtons="False"
                            Value="{Binding IntegerDe, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                        <mah:NumericUpDown
                            x:Name="nudIntegerAte"
                            Grid.Column="1"
                            Margin="2"
                            VerticalAlignment="Center"
                            HorizontalContentAlignment="Stretch"
                            mah:TextBoxHelper.ClearTextButton="{Binding RelativeSource={RelativeSource Self}, Path=(mah:TextBoxHelper.HasText), Mode=OneWay}"
                            mah:TextBoxHelper.UseFloatingWatermark="True"
                            mah:TextBoxHelper.Watermark="Até"
                            mah:TextBoxHelper.WatermarkAlignment="Left"
                            Culture="pt-BR"
                            DecimalPointCorrection="Currency"
                            HideUpDownButtons="True"
                            InterceptArrowKeys="False"
                            InterceptManualEnter="True"
                            InterceptMouseWheel="False"
                            Minimum="{Binding IntegerDe, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                            NumericInputMode="Decimal"
                            StringFormat="{Binding ParametroSelecionado.Formato, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                            SwitchUpDownButtons="False"
                            Value="{Binding IntegerAte, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                    </Grid>
                    <StackPanel
                        x:Name="grdPesquisaBoolean"
                        Grid.Column="2"
                        Margin="10,0"
                        d:Visibility="Collapsed"
                        Orientation="Horizontal"
                        Visibility="{c:Binding 'PesquisaBooleanVisivel and !PesquisaBasica',
                                               Mode=TwoWay,
                                               UpdateSourceTrigger=PropertyChanged}">
                        <RadioButton
                            x:Name="rdbPesquisaBoolean1"
                            Width="100"
                            Margin="2"
                            Content="Sim"
                            GroupName="PesquisaBoolean"
                            IsChecked="{Binding BooleanValue, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                        <RadioButton
                            x:Name="rdbPesquisaBoolean2"
                            Width="100"
                            Margin="2"
                            Content="Não"
                            GroupName="PesquisaBoolean"
                            IsChecked="{c:Binding !BooleanValue,
                                                  Mode=TwoWay,
                                                  UpdateSourceTrigger=PropertyChanged}" />
                    </StackPanel>
                    <ComboBox
                        x:Name="cboOperador"
                        Grid.Row="0"
                        Grid.Column="3"
                        Margin="2"
                        VerticalAlignment="Center"
                        d:Visibility="Collapsed"
                        mah:TextBoxHelper.IsWaitingForData="True"
                        mah:TextBoxHelper.UseFloatingWatermark="True"
                        mah:TextBoxHelper.Watermark="Operador"
                        DisplayMemberPath="Nome"
                        ItemsSource="{Binding ListaOperadores, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                        SelectedItem="{Binding OperadorSelecionado, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                        Visibility="{c:Binding '!PesquisaBasica',
                                               Mode=TwoWay,
                                               UpdateSourceTrigger=PropertyChanged}" />
                    <Button
                        x:Name="btnAdicionar"
                        Grid.Column="4"
                        Margin="2"
                        VerticalAlignment="Center"
                        d:Visibility="Collapsed"
                        Command="{Binding ComandoAdicionarFiltro}"
                        Visibility="{c:Binding '!PesquisaBasica',
                                               Mode=TwoWay,
                                               UpdateSourceTrigger=PropertyChanged}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="24" />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>

                            <iconPacks:PackIconMaterial
                                Grid.Column="0"
                                VerticalAlignment="Center"
                                Foreground="{DynamicResource MahApps.Brushes.Accent}"
                                Kind="Plus" />
                            <TextBlock Grid.Column="1">Adicionar</TextBlock>
                        </Grid>
                    </Button>
                    <Button
                        x:Name="btnPesquisar"
                        Grid.Row="0"
                        Grid.Column="5"
                        Margin="2"
                        VerticalAlignment="Center"
                        Click="btnPesquisar_Click"
                        Command="{Binding ComandoPesquisar}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="24" />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>

                            <iconPacks:PackIconMaterial
                                Grid.Column="0"
                                VerticalAlignment="Center"
                                Foreground="{DynamicResource MahApps.Brushes.Accent}"
                                Kind="DatabaseSearch" />
                            <TextBlock Grid.Column="1">Pesquisar</TextBlock>
                        </Grid>
                    </Button>
                </Grid>
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="320" />
                        <ColumnDefinition Width="300" />
                        <ColumnDefinition Width="150" />
                    </Grid.ColumnDefinitions>
                    <CheckBox
                        x:Name="chkConsideraApenasAtivos"
                        Grid.Column="0"
                        IsChecked="{Binding ConsideraApenasAtivos, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                        Considerar apenas registros ativos
                    </CheckBox>
                    <ComboBox
                        x:Name="cboClassificarPor"
                        Grid.Column="1"
                        Margin="2"
                        VerticalAlignment="Center"
                        mah:TextBoxHelper.IsWaitingForData="True"
                        mah:TextBoxHelper.UseFloatingWatermark="True"
                        mah:TextBoxHelper.Watermark="Classificar por"
                        ItemsSource="{Binding ListaClassificarPor, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                        SelectedItem="{Binding ClassificarPorSelecionado, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="25" />
                                        <ColumnDefinition />
                                    </Grid.ColumnDefinitions>
                                    <iconPacks:PackIconMaterial
                                        Grid.Column="0"
                                        VerticalAlignment="Center"
                                        Foreground="{DynamicResource MahApps.Brushes.Accent}"
                                        Kind="{Binding Icone}" />
                                    <TextBlock Grid.Column="1" Text="{Binding Nome}" />
                                </Grid>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                    <ComboBox
                        x:Name="cboOrdem"
                        Grid.Column="2"
                        Margin="2"
                        VerticalAlignment="Center"
                        mah:TextBoxHelper.IsWaitingForData="True"
                        mah:TextBoxHelper.UseFloatingWatermark="True"
                        mah:TextBoxHelper.Watermark="Ordem"
                        ItemsSource="{Binding ListaOrdem, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                        SelectedItem="{Binding OrdemSelecionada, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="25" />
                                        <ColumnDefinition />
                                    </Grid.ColumnDefinitions>
                                    <iconPacks:PackIconMaterial
                                        Grid.Column="0"
                                        VerticalAlignment="Center"
                                        Foreground="{DynamicResource MahApps.Brushes.Accent}"
                                        Kind="{Binding Icone}" />
                                    <TextBlock Grid.Column="1" Text="{Binding Nome}" />
                                </Grid>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                </Grid>
            </Grid>
        </Expander>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="{c:Binding FilterSize, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" d:Width="350" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <GroupBox
                x:Name="grpFiltros"
                Grid.Column="0"
                Margin="2"
                Visibility="{c:Binding FilterVisible,
                                       Mode=OneWay,
                                       UpdateSourceTrigger=PropertyChanged}">
                <GroupBox.Header>
                    <Grid>
                        <TextBlock
                            x:Name="txbFilters"
                            Foreground="{DynamicResource MahApps.Brushes.IdealForeground}"
                            Text="FILTROS" />
                        <Rectangle
                            x:Name="rctFilters"
                            Margin="-4"
                            Fill="Transparent">
                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="MouseLeftButtonDown">
                                    <i:InvokeCommandAction Command="{Binding ComandoAlterarTamanhoFiltro}" />
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                        </Rectangle>
                    </Grid>
                </GroupBox.Header>
                <AdornerDecorator x:Name="adFiltros">
                    <Grid>
                        <ScrollViewer d:Visibility="Visible" Visibility="{c:Binding PesquisaBasica, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}">
                            <StackPanel>
                                <syncfusion:SfDataGrid
                                    x:Name="sfdSetor"
                                    MaxHeight="100"
                                    Margin="2"
                                    AllowDraggingColumns="True"
                                    AllowEditing="False"
                                    AllowFiltering="True"
                                    AutoGenerateColumns="False"
                                    BorderThickness="1"
                                    ColumnSizer="Star"
                                    GridLinesVisibility="None"
                                    HeaderLinesVisibility="None"
                                    HeaderRowHeight="26"
                                    ItemsSource="{Binding ListaObjetoSelecionavelSetores, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"
                                    LiveDataUpdateMode="AllowDataShaping"
                                    SelectionMode="Multiple">
                                    <syncfusion:SfDataGrid.Columns>
                                        <syncfusion:GridCheckBoxSelectorColumn
                                            Width="28"
                                            HorizontalAlignment="Center"
                                            AllowCheckBoxOnHeader="True"
                                            AllowFiltering="False"
                                            AllowResizing="False"
                                            AllowSorting="False"
                                            MappingName="Selecionado" />
                                        <syncfusion:GridTextColumn
                                            HeaderText="Setor"
                                            HorizontalHeaderContentAlignment="Left"
                                            MappingName="Nome" />
                                    </syncfusion:SfDataGrid.Columns>
                                </syncfusion:SfDataGrid>
                                <syncfusion:SfDataGrid
                                    x:Name="sfdUsuario"
                                    MaxHeight="100"
                                    Margin="2"
                                    AllowDraggingColumns="True"
                                    AllowEditing="False"
                                    AllowFiltering="True"
                                    AutoGenerateColumns="False"
                                    BorderThickness="1"
                                    ColumnSizer="Star"
                                    GridLinesVisibility="None"
                                    HeaderLinesVisibility="None"
                                    HeaderRowHeight="26"
                                    ItemsSource="{Binding ListaObjetoSelecionavelUsuariosInsercao, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"
                                    LiveDataUpdateMode="AllowDataShaping"
                                    SelectionMode="Multiple">
                                    <syncfusion:SfDataGrid.Columns>
                                        <syncfusion:GridCheckBoxSelectorColumn
                                            Width="28"
                                            HorizontalAlignment="Center"
                                            AllowCheckBoxOnHeader="True"
                                            AllowFiltering="False"
                                            AllowResizing="False"
                                            AllowSorting="False"
                                            MappingName="Selecionado" />
                                        <syncfusion:GridTextColumn
                                            HeaderText="Usuário de inserção"
                                            HorizontalHeaderContentAlignment="Left"
                                            MappingName="Nome" />
                                    </syncfusion:SfDataGrid.Columns>
                                </syncfusion:SfDataGrid>
                                <syncfusion:SfDataGrid
                                    x:Name="sfdCliente"
                                    MaxHeight="100"
                                    Margin="2"
                                    AllowDraggingColumns="True"
                                    AllowEditing="False"
                                    AllowFiltering="True"
                                    AutoGenerateColumns="False"
                                    BorderThickness="1"
                                    ColumnSizer="Star"
                                    GridLinesVisibility="None"
                                    HeaderLinesVisibility="None"
                                    HeaderRowHeight="26"
                                    ItemsSource="{Binding ListaObjetoSelecionavelClientes, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"
                                    LiveDataUpdateMode="AllowDataShaping"
                                    SelectionMode="Multiple">
                                    <syncfusion:SfDataGrid.Columns>
                                        <syncfusion:GridCheckBoxSelectorColumn
                                            Width="28"
                                            HorizontalAlignment="Center"
                                            AllowCheckBoxOnHeader="True"
                                            AllowFiltering="False"
                                            AllowResizing="False"
                                            AllowSorting="False"
                                            MappingName="Selecionado" />
                                        <syncfusion:GridTextColumn
                                            HeaderText="Cliente"
                                            HorizontalHeaderContentAlignment="Left"
                                            MappingName="Nome" />
                                    </syncfusion:SfDataGrid.Columns>
                                </syncfusion:SfDataGrid>
                                <syncfusion:SfDataGrid
                                    x:Name="sfdTipoOrdemServico"
                                    MaxHeight="100"
                                    Margin="2"
                                    AllowDraggingColumns="True"
                                    AllowEditing="False"
                                    AllowFiltering="True"
                                    AutoGenerateColumns="False"
                                    BorderThickness="1"
                                    ColumnSizer="Star"
                                    GridLinesVisibility="None"
                                    HeaderLinesVisibility="None"
                                    HeaderRowHeight="26"
                                    ItemsSource="{Binding ListaObjetoSelecionavelTipoOrdemServico, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"
                                    LiveDataUpdateMode="AllowDataShaping"
                                    SelectionMode="Multiple">
                                    <syncfusion:SfDataGrid.Columns>
                                        <syncfusion:GridCheckBoxSelectorColumn
                                            Width="28"

                                Margin="0,-5,0,0"
                                Content="Pelo menos 1 letra minúscula"
                                Visibility="{Binding Path=MinusculasNovaSenhaVisivel, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource BoolToVis}}" />
                            <Label
                                x:Name="lblNumeroNovaSenha"
